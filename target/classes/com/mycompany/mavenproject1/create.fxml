                  <VBox spacing="5">
                     <Label text="b0:" 
                            style="-fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 20;"/>
                     <TextField fx:id="b0TextField" 
                               style="-fx-background-radius: 3; -fx-border-radius: 3; -fx-border-color: #ccc; -fx-padding: 8; -fx-font-size: 20; -fx-background-color: white;"
