<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.mavenproject1.ViewsController"
            style="-fx-background-color: white;"
            fitToWidth="true"
            vbarPolicy="AS_NEEDED"
            hbarPolicy="NEVER">
   
   <content>
      <VBox spacing="20.0" alignment="CENTER">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>
         
         <children>
            <StackPane>
               <Label text="Результаты исследований" 
                      style="-fx-text-fill: black; -fx-font-size: 34; -fx-font-weight: bold;"/>
            </StackPane>

            <VBox style="-fx-background-color: #f8f8f8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5;"
                  spacing="15">
               <padding>
                  <Insets top="20" right="20" bottom="20" left="20"/>
               </padding>
               
               <children>
                  <Label text="Зависимость Hr от T (τ фиксировано)" 
                         style="-fx-text-fill: black; -fx-font-size: 20; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
                  
                  <HBox spacing="20" alignment="CENTER">
                     <VBox spacing="10">
                        <LineChart fx:id="lineChartTauFixed" minWidth="600" minHeight="400" 
                                  style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 3;">
                           <xAxis>
                              <NumberAxis fx:id="xAxisTauFixed" side="BOTTOM" label="T (°C)" 
                                         style="-fx-tick-label-fill: black; -fx-font-size: 14;"/>
                           </xAxis>
                           <yAxis>
                              <NumberAxis fx:id="yAxisTauFixed" side="LEFT" label="Hr (ед)"
                                         style="-fx-tick-label-fill: black; -fx-font-size: 14;"/>
                           </yAxis>
                        </LineChart>
                     </VBox>

                     <HBox spacing="10" alignment="TOP_LEFT">
                        <VBox spacing="0" alignment="TOP_RIGHT" style="-fx-padding: 30 10 0 0;">
                            <Label text="T" style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 11 5 0 0;"/>
                           <Label text="τ min" style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 11 5 0 0;"/>
                           <Label text="τ ср" style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 11 5 0 0;"/>
                           <Label text="τ max" style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 11 5 0 0;"/>
                        </VBox>

                        <VBox spacing="10">
                           <Label text="Значения Hr (ед)" 
                                  style="-fx-text-fill: black; -fx-font-size: 18; -fx-font-weight: bold;"/>
                           <TableView fx:id="tauFixedTableView" 
                                     style="-fx-background-color: white; -fx-font-size: 18; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 3;"
                                     minWidth="300" minHeight="400"
                                     prefWidth="950" prefHeight="400"/>
                        </VBox>
                     </HBox>
                  </HBox>
               </children>
            </VBox>

            <VBox style="-fx-background-color: #f8f8f8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5;"
                  spacing="15">
               <padding>
                  <Insets top="20" right="20" bottom="20" left="20"/>
               </padding>
               
               <children>
                  <Label text="Зависимость Hr от τ (T фиксировано)" 
                         style="-fx-text-fill: black; -fx-font-size: 20; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
                  
                  <HBox spacing="20" alignment="CENTER">
                     <VBox spacing="10">
                        <LineChart fx:id="lineChartTFixed" minWidth="600" minHeight="400"
                                  style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 3;">
                           <xAxis>
                              <NumberAxis fx:id="xAxisTFixed" side="BOTTOM" label="τ (мин)" 
                                         style="-fx-tick-label-fill: black; -fx-font-size: 14;"/>
                           </xAxis>
                           <yAxis>
                              <NumberAxis fx:id="yAxisTFixed" side="LEFT" label="Hr (ед)"
                                         style="-fx-tick-label-fill: black; -fx-font-size: 14;"/>
                           </yAxis>
                        </LineChart>
                     </VBox>

                     <HBox spacing="10" alignment="TOP_LEFT">
                        <VBox spacing="0" alignment="TOP_RIGHT" style="-fx-padding: 30 10 0 0;">
                            <Label text="τ" style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 11 5 0 0;"/>
                           <Label text="T min" style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 11 5 0 0;"/>
                           <Label text="T ср" style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 11 5 0 0;"/>
                           <Label text="T max" style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 11 5 0 0;"/>
                        </VBox>

                        <VBox spacing="10">
                           <Label text="Значения Hr (ед)" 
                                  style="-fx-text-fill: black; -fx-font-size: 18; -fx-font-weight: bold;"/>
                           <TableView fx:id="TFixedTableView" 
                                     style="-fx-background-color: white; -fx-font-size: 18; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 3;"
                                     minWidth="300" minHeight="400"
                                     prefWidth="950" prefHeight="400"/>
                        </VBox>
                     </HBox>
                  </HBox>
               </children>
            </VBox>
            
            <HBox style="-fx-background-color: #f8f8f8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5;"
                    spacing="30" alignment="CENTER">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
   
                <children>
                     <VBox spacing="5" alignment="CENTER">
                         <Label text="Время выполнения:" 
                             style="-fx-text-fill: black; -fx-font-size: 14; -fx-font-weight: bold;"/>
                         <Label fx:id="timeLabel" text="0.000 с" 
                             style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold;"/>
                     </VBox>

                     <VBox spacing="5" alignment="CENTER">
                         <Label text="Использовано памяти:" 
                             style="-fx-text-fill: black; -fx-font-size: 14; -fx-font-weight: bold;"/>
                         <Label fx:id="memoryLabel" text="0.00 МБ" 
                             style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-weight: bold;"/>
                     </VBox>
                 </children>
            </HBox>

            <VBox style="-fx-background-color: #f8f8f8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5;"
                  spacing="15">
               <padding>
                  <Insets top="20" right="20" bottom="20" left="20"/>
               </padding>

               
               <HBox alignment="CENTER" spacing="10">
                                  <Button text="Выйти" fx:id="exitButton" onAction="#exit"
                         style="-fx-background-color: #2c2c2c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; -fx-background-radius: 3; -fx-padding: 10 20;"/>
                  <Button text="Сформировать отчёт" fx:id="reportButton" onAction="#createReport"
                         style="-fx-background-color: #2c2c2c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; -fx-background-radius: 3; -fx-padding: 10 20;"/>
               </HBox>
            </VBox>
         </children>
      </VBox>
   </content>
</ScrollPane>